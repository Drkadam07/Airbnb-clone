<% layout('./layout/boilerplate') %>

<div class="row mt-3">
    <h1 class="col-6 offset-3 mb-5 text-center">Sign Up on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" class="form-control" placeholder="Enter the Username" id="username" aria-describedby="usernameValidCheck" required>
                <div class="valid-feedback">Username âœ…</div>
                <div id="usernameValidCheck" class="invalid-feedback">Please enter a valid Username!</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" class="form-control" placeholder="Enter the Email" id="email" aria-describedby="emailValidCheck" required>
                <div class="valid-feedback">Email ðŸ“§</div>
                <div id="emailValidCheck" class="invalid-feedback">Please enter a valid Email!</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" class="form-control" placeholder="Enter the Password" id="password" aria-describedby="passwordValidCheck" required>
                <div class="valid-feedback">Strong Password ðŸ’ª</div>
                <div id="passwordValidCheck" class="invalid-feedback">Please enter a strong password!</div>
            </div>

            <button type="submit" class="btn btn-success">Sign Up</button>
        </form>
    </div>
</div>
