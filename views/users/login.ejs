<% layout('./layout/boilerplate') %>

<div class="row mt-3">
    <h1 class="col-6 offset-3 mb-5 text-center">Sign In on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" class="form-control" placeholder="Enter the Username" id="username" aria-describedby="usernameValidCheck" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" class="form-control" placeholder="Enter the Password" id="password" aria-describedby="passwordValidCheck" required>
            </div>

            <button type="submit" class="btn btn-success">Login</button>
        </form>
    </div>
</div>
