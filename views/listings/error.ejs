<% layout('./layout/boilerplate') %>

    <head>
        <style>
            .Error {
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background-color: #fff;
                padding: 20px;
                border-radius: 8px;
                box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
                text-align: center;
                z-index: 1000;
                width: 400px;
                max-width: 90%;
            }

            .close-btn {
                position: absolute;
                top: 5px;
                right: 20px;
                background: none;
                border: none;
                font-size: 2em;
                color: #333;
                cursor: pointer;
                padding: 0;
            }

            .close-btn:hover {
                color: #ff4d4f;
            }

            h1 {
                font-size: 2.5em;
                color: #ff4d4f;
                margin-bottom: 10px;
            }

            p {
                font-size: 1.2em;
                color: #333;
            }

            .error-container {
                width: 60px;
                height: 60px;
                margin: 0 auto 20px;
                background-size: contain;
            }

            .overlay {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.5);
                z-index: 999;
            }

            /* Responsive adjustments */
            @media (max-width: 600px) {
                h1 {
                    font-size: 2em;
                }

                p {
                    font-size: 1em;
                }
            }
        </style>
    </head>

    <body>
        <div class="overlay"></div>
        <div class="Error">
            <button class="close-btn">&times;</button>
            <div class="error-container"></div>
            <h1>Error <%= status %>
            </h1>
            <p>
                <%= message %>
            </p>
        </div>

    </body>